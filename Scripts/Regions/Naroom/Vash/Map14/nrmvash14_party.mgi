?_NRMVASH14_PARTY_POAD_TXT1
	TextOpen				()
	TextIcon				(ICON_POAD)
	TextWrite				("Sorry, the inn=")
							("is closed for")
							("today.")
	TextIcon				(ICON_TONY)
	TextWrite				("That's okay.")
	If						([Evu_Conversation_2],_NEXT)
	TextIcon				(ICON_POAD)
	TextWrite				("Boy, I'm so=")
							("hungry... maybe")
							("I'll go fix=")
							("myself a pie")
							("with these=")
							("jellybeans.")
	TextIcon				(ICON_TRYN)
	TextWrite				("Make enough=")
							("for me too,")
							("okay Poady?")
	TextClose				()
	SetEventText			(1)
	SetXRAMBit				(Party_Poad,TRUE)
	End						()
_NEXT
	TextWrite				("By the way,=")
							("do you happen")
							("to have any=")
							("jellybeans?")
	TextIcon				(ICON_POAD)
	TextWrite				("Yes I do,=")
							("right here!")
							("I was going=")
							("to use them")
							("to make a pie,=")
							("but if you")
							("want them you=")
							("can have them!")
	TextIcon				(ICON_TONY)
	TextWrite				("Thanks!")
	TextClose				()
	TextOpen				()
	TextWrite				("-Tony got=")
							("jellybeans!-")
	TextClose				()
	SetXRAMBit				(Party_Poad,TRUE)
	SetXRAMBit				(Party_Jellybeans,TRUE)
	SetEventText			(1)
	End						()

