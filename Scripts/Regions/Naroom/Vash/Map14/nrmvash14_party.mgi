	SetText					(?_NRMVASH14_PARTY_TRYN_TXT)
	Jump					(?_FACE_TRYN)

?_NRMVASH14_TC1_PARTY_TALK
	ThisActorSetAnim		(?_GIRL03_STAND_UP_ANIM)
	SetText					(?_NRMVASH14_TC1_PARTY_TXT)
	ThisActorSetAnimDelay	(?_GIRL03_STAND_UL_ANIM,8)
							(?_GIRL03_STAND_UP_ANIM,8)
							(?_GIRL03_STAND_UR_ANIM,8)
							(?_GIRL03_STAND_UP_ANIM,8)
							(?_GIRL03_STAND_UL_ANIM,8)
							(?_GIRL03_STAND_UP_ANIM,8)
							(?_GIRL03_STAND_UR_ANIM,8)
							(?_GIRL03_STAND_UP_ANIM,0)
	WaitEventText			(1)
	ThisActorRestoreState	()
	
?_NRMVASH14_TC2_PARTY_TALK
	SetText					(?_NRMVASH14_TC2_PARTY_TXT)
	Jump					(?_FACE_GIRL03)

?_NRMVASH14_PARTY_POAD_TALK
	ThisActorSetAnim		(?_POAD_STAND_UP_ANIM)
	If						([Party_Poad],_OTHERTEXT)
	SetText					(?_NRMVASH14_PARTY_POAD_TXT1)
	Jump					(_DONE)
_OTHERTEXT
	If						([Evu_Conversation_2],_TEXT2)
_TEXT3
	SetText					(?_NRMVASH14_PARTY_POAD_TXT3)
	Jump					(_DONE)
_TEXT2
	If						([Party_Jellybeans],_TEXT3)
	SetText					(?_NRMVASH14_PARTY_POAD_TXT2)
_DONE
	Jump					(?_FACE_POAD)

